<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.EditQuestionView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightBlue">
            <Entry Placeholder="{Binding QText}" FontSize="Medium" PlaceholderColor="DarkGray" FontAttributes="Bold" FontFamily="Calibri"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Entry Placeholder="{Binding CorrectAns}" PlaceholderColor="DarkGray" BackgroundColor="Green" HorizontalTextAlignment="Center" FontSize="Medium" FontAttributes="Italic" Grid.Column="0" Grid.Row="1"/>
                <Entry Placeholder="{Binding AnswersList[0]}" PlaceholderColor="DarkGray" FontSize="Medium" HorizontalTextAlignment="Center"  Grid.Column="0" Grid.Row="2"/>
                <Entry Placeholder="{Binding AnswersList[1]}" PlaceholderColor="DarkGray" FontSize="Medium" HorizontalTextAlignment="Center" Grid.Column="0" Grid.Row="3"/>
                <Entry Placeholder="{Binding AnswersList[2]}" PlaceholderColor="DarkGray" FontSize="Medium" HorizontalTextAlignment="Center" Grid.Column="0" Grid.Row="4"/>
            </Grid>
            <Button x:Name="submit" Text="Submit"  Command="{Binding EditQuestionCommand}" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold" BackgroundColor="MediumSeaGreen"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>